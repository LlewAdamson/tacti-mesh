{
  "name": "tacti-mesh",
  "productName": "TactiMesh",
  "private": true,
  "version": "1.0.0",
  "description": "A tactical mesh network visualization and command system",
  "type": "module",
  "main": "dist-electron/main.js",
  "author": "LlewAdamson",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:mac": "npm run build:for-electron && electron-builder --mac",
    "build:win": "npm run build:for-electron && electron-builder --win",
    "build:linux": "npm run build:for-electron && electron-builder --linux",
    "preview": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron\"",
    "build:for-electron": "tsc && vite build",
    "test": "echo \"No tests configured yet\" && exit 0",
    "lint": "echo \"No linter configured yet\" && exit 0",
    "format": "echo \"No formatter configured yet\" && exit 0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-force-graph": "^1.48.0",
    "tailwindcss": "^3.4.17",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.2",
    "electron-builder": "^24.6.4",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tacti.mesh",
    "productName": "TactiMesh",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
